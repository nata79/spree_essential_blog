<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Related Products"} %>

<h3>Related Products</h3>

<%= form_for [:admin, @post ] do |f| %>

  <p class="field">
    <label>
      Choose products
    </label>
    <%= f.select :product_ids, 
      Spree::Product.all.map { |p| [p.name, p.id] }, 
      {include_blank: true}, 
      multiple: true,
      class: 'select2 fullwidth' 
    %>
  </p>
  
  <p class="actions">
    <%= hidden_field_tag :redirect_to, request.url, :class => "hidden" %>
    <%= button t("update") %>
  </p>

<% end %>
